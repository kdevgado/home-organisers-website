<script is:inline>
  // Simple auto-rotating carousel
  let idx = 0;
  const slides = document.querySelectorAll(".carousel .slide");
  setInterval(() => {
    slides[idx].classList.remove("active");
    idx = (idx + 1) % slides.length;
    slides[idx].classList.add("active");
  }, 5000);

// Mobile service cards carousel
const track = document.querySelector(".service-grid");
const prevBtn = document.querySelector(".carousel-btn.prev");
const nextBtn = document.querySelector(".carousel-btn.next");
let currentIndex = 0;

function updateCarousel() {
  if (window.innerWidth <= 700) {
    track.style.transform = `translateX(-${currentIndex * 100}%)`;
  } else {
    track.style.transform = "none"; // reset on desktop
  }
}

nextBtn.addEventListener("click", () => {
  if (currentIndex < track.children.length - 1) {
    currentIndex++;
    updateCarousel();
  }
});

prevBtn.addEventListener("click", () => {
  if (currentIndex > 0) {
    currentIndex--;
    updateCarousel();
  }
});

// --- Swipe gestures ---
let startX = 0;
let isSwiping = false;

track.addEventListener("touchstart", (e) => {
  if (window.innerWidth > 700) return; // only on mobile
  startX = e.touches[0].clientX;
  isSwiping = true;
});

track.addEventListener("touchmove", (e) => {
  if (!isSwiping) return;
  const currentX = e.touches[0].clientX;
  const diff = startX - currentX;

  // Optional: add drag feel
  track.style.transform = `translateX(calc(-${currentIndex * 100}% - ${diff}px))`;
});

track.addEventListener("touchend", (e) => {
  if (!isSwiping) return;
  isSwiping = false;

  const endX = e.changedTouches[0].clientX;
  const diff = startX - endX;

  if (Math.abs(diff) > 50) {
    if (diff > 0 && currentIndex < track.children.length - 1) {
      currentIndex++; // swipe left → next
    } else if (diff < 0 && currentIndex > 0) {
      currentIndex--; // swipe right → prev
    }
  }
  updateCarousel();
});

window.addEventListener("resize", updateCarousel);
updateCarousel();



</script>
